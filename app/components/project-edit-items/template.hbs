<div class="comic-card demo-card-square mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand">
    <img class="com-tile-img"src="{{tile.url}}" alt="">
    <p class="com-caption">{{tile.caption}}</p>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    {{#mdl-button on-click=(action 'delete' tile)}}
      <i class="fa fa-trash"></i>
    {{/mdl-button}}
    {{#link-to 'projects.tiles.edit' tile class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"}}
      <i class="fa fa-pencil"></i>
    {{/link-to}}
  </div>
</div>

{{log tile.title}}

{{#if editing}}
  <form action="#" {{action 'saveTile' tile on="submit"}}>
    {{#mdl-card title='Edit Tile' class="comic-card"}}
      <div class="mdl-card__supporting-text">
        {{mdl-textfield label="Url" value=tile.url}}
        {{mdl-textfield label="Caption" value=tile.caption}}
      </div>
      {{#mdl-card-actions}}
        {{mdl-button text='Submit'}}
      {{/mdl-card-actions}}
    {{/mdl-card}}
  </form>
{{/if}}
